#!/usr/bin/env python

from __future__ import print_function, division

import argparse 
import desitarget.mock.brighttime

parser = argparse.ArgumentParser(description="Create mock target file from BGS and MWS mocks")
parser.add_argument("--output_dir", "-O", help="Path to write the outputs (targets,truth)", type=str, default="./")
parser.add_argument("--root_mock_mws_dir", "-S", help="Root path to the MWS (desi_galfast) files", type=str, required=True)
parser.add_argument("--mag_bright","-b",help="Upper limit cut in SDSSr observed magnitude. Default 15.0.", type=float, default=15.0)
parser.add_argument("--mag_faint","-f",help="Lower limit cut in SDSSr observed magnitude. Default 20.0.", type=float, default=20.0)
parser.add_argument("--rand_seed","-r",help="Seed for Random Number. Generator Default 42.", type=int, default=42)
parser.add_argument("--verbose", "-v", action='store_true')
args = parser.parse_args()

_ = desitarget.mock.brighttime.build_mock_target(output_dir=args.output_dir,\
                                                root_mock_mws_dir=args.root_mock_mws_dir,\
                                                mag_faint=args.mag_faint, mag_bright=args.mag_bright,\
                                                rand_seed=args.rand_seed)

